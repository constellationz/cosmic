map u scroll half-up
map d scroll half-down
map p toggle_page_mode
map <BackSpace> scroll full-up
unmap q

set selection-clipboard "clipboard"
set sandbox none
set continuous-hist-save true
set window-title-home-tilde true
set statusbar-home-tilde true

set recolor-keephue true
set recolor-reverse-video false

set scroll-step 60
set scroll-full-overlap 0.1
set scroll-page-aware true

set synctex true
set synctex-editor-command "nvim +%{line} %{input}"

set dbus-service true
set dbus-raise-window false

set page-padding 2
set page-cache-size 64

set completion-bg "#000000" 
set completion-fg "#ECEFF4"
