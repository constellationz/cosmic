# Display configuration for i3

# Use xrandr to list available displays and modes
exec_always --no-startup-id xrandr --output DP-1 --mode 2560x1080 --rate 75 --primary
exec_always --no-startup-id xrandr --output HDMI-1 --mode 1920x1080 --rate 60 --left-of DP-1

# Assign workspaces to displays
workspace $ws1 output HDMI-1
workspace $ws2 output DP-1
workspace $ws3 output DP-1
workspace $ws4 output DP-1
workspace $ws5 output DP-1
workspace $ws6 output DP-1
workspace $ws7 output DP-1
workspace $ws8 output DP-1
workspace $ws9 output DP-1
workspace $ws10 output DP-1

# Set wallpaper after screens are set up
exec_always --no-startup-id feh --bg-fill ~/.wallpaper
