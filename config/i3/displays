# Display configuration for i3

# Use xrandr to list available displays and modes
exec --no-startup-id xrandr --output HDMI-2 --mode 2560x1080 --primary
exec --no-startup-id xrandr --output HDMI-1-1 --mode 1920x1080 --left-of HDMI-2

# Assign workspaces to displays
workspace $ws1 output HDMI-1-1
workspace $ws2 output HDMI-2
workspace $ws3 output HDMI-2
workspace $ws4 output HDMI-2
workspace $ws5 output HDMI-2
workspace $ws6 output HDMI-2
workspace $ws7 output HDMI-2
workspace $ws8 output HDMI-2
workspace $ws9 output HDMI-2
workspace $ws10 output HDMI-2
